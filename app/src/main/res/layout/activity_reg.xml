<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reg"
    android:background="@color/background">

    <EditText
        android:id="@+id/editTextNameSignUp"
        android:layout_width="346dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/white"
        android:hint="Имя"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <EditText
        android:id="@+id/editTextSecondNameSignUp"
        android:layout_width="346dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/white"
        android:hint="Фамилия"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <EditText
        android:id="@+id/editTextEmailSignUp"
        android:layout_width="346dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/white"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />

    <EditText
        android:id="@+id/editTextPasswordSignUp"
        android:layout_width="346dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/white"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />

    <EditText
        android:id="@+id/editTextRepeatPasswordSignUp"
        android:layout_width="346dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/white"
        android:hint="Повторите Пароль"
        android:inputType="textPassword"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegistationSignUp"
        android:layout_width="340dp"
        android:layout_height="54dp"
        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/button_backgraund"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.784" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tvRedirectLogin"
        android:layout_width="340dp"
        android:layout_height="54dp"
        android:background="@drawable/button_backgraund"
        android:gravity="center"
        android:text="Залогиниться"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.899" />


</androidx.constraintlayout.widget.ConstraintLayout>